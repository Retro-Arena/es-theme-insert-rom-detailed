<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/background.jpg</path>
		</image>
	</view>
	
	<view name="basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video"> 		
		<textlist name="gamelist">		
			<pos>0.2911 0.4259</pos>
			<size>0.2063 0.3453</size>
		</textlist>	
		
   		<image name="bezel" extra="true">
			<path>./_inc/bezel_detailed.png</path>
		</image>
		
		<image name="md_image">
			<pos>1 1</pos>
			<origin>0 0</origin>
			<rotation>0</rotation>
		</image>
		
		<text name="
			md_lbl_rating,
			md_lbl_releasedate,
			md_lbl_developer, md_developer,
			md_lbl_publisher, md_publisher,
			md_lbl_genre, md_genre,
			md_lbl_players, md_players,
			md_description
			">		
				<color>0042a4</color>
		</text>			
			<rating name="md_rating">
				<color>0042a4</color>
				</rating>
			<datetime name="md_releasedate">
				<color>0042a4</color>
				</datetime>
			<text name="md_description">
				<color>000000</color>
			</text>
	</view>
	
	<feature supported="video">
      <view name="video">
		<video name="md_video">
			<pos>0.2891 0.4213</pos>
			<maxSize>0.1693 0.2685</maxSize>
			<rotation>11</rotation>
		</video>
      </view>
	</feature>
 	
</theme>