<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/background.jpg</path>
		</image>
	</view>
	
	<view name="basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image> 
	</view>
	
	<view name="detailed, video">		
		<textlist name="gamelist">
			<pos>0.2296875 0.4620</pos>
			<size>0.2761 0.4058</size>
		</textlist>
		
   		<image name="bezel" extra="true">
			<path>./_inc/bezel_detailed.png</path>
		</image>
		
		<image name="md_image">		
			<pos>1 1</pos>
			<origin>0 0</origin>
			<rotation>0</rotation>
		</image>		
			  
		<image name="md_marquee">
			<pos>0.8125 0.2620</pos>
		</image>
		
		<text name="
			md_lbl_rating,
			md_lbl_releasedate,
			md_lbl_developer, md_developer,
			md_lbl_publisher, md_publisher,
			md_lbl_genre, md_genre,
			md_lbl_players, md_players,
			md_description
			">
				<pos>0.625 0.4722</pos>
				<color>2c2c2c</color>
			</text>
			
			<rating name="md_rating">	
				<pos>0.6675 0.4722</pos>
				<color>2c2c2c</color>
				</rating>		
			<datetime name="md_releasedate">				
				<pos>0.68125 0.4962</pos>
				<color>2c2c2c</color>
			</datetime>
			<text name="md_description">
				<color>505050</color>
				</text>		
	</view>

	<feature supported="video">
      <view name="video">
		<video name="md_video">
			<origin>0.5 0.5</origin>
			<pos>0.2292 0.4612</pos>
			<maxSize>0.2474 0.3380</maxSize>
			<rotation>8.92</rotation>
		</video>
      </view>
	</feature>
	
</theme>