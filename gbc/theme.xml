<theme>
	<formatVersion>4</formatVersion>
	<include>./../theme.xml</include>

	<view name="system">
		<image name="logo">
			<path>./_inc/background.jpg</path>
		</image>
	</view>
	
	<view name="basic, detailed, video">
		<image name="logo">
			<path>./_inc/system.svg</path>
		</image>
	</view>

	<view name="detailed, video"> 		
		<textlist name="gamelist">		
			<pos>0.2518 0.2778</pos>
			<size>0.1647 0.2758</size>
		</textlist>	
		
   		<image name="bezel" extra="true">
			<path>./_inc/bezel_detailed.png</path>
		</image>
		
		<image name="md_image">
			<pos>1 1</pos>
			<origin>0 0</origin>
			<rotation>0</rotation>
		</image>
	</view>
	
	<feature supported="video">
      <view name="video">
		<video name="md_video">
			<pos>0.2518 0.2778</pos>
			<maxSize>0.1713 0.2705</maxSize>
			<rotation>-5</rotation>
		</video>
      </view>
	</feature>
 	
</theme>